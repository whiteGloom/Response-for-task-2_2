//- Миксин создаёт поле ввода. Свойства:
//- "type" (string) [стандартные html значения] - роль поля в форме заголовка. По умолчанию - "text".
//- "color" (string) ["aquamarine", "orange"] - цвет поля. По умолчанию - "aquamarine".
//- "form" (string) ["bar", "box"] - тип поля (большое и маленькое). По умолчанию - "bar".
//- "required" (boolean / nothing) - необходимо ли заполнение поля перед отправкой.
//- "name" (string) - идентификация поля. По умолчанию - "input".
//- "radius" (string) ["default", "left"] - скругление границ поля. По умолчанию - "default".
//- "placeholder" (string) - пример текста. По умолчанию - "".
mixin inputMix(options)
    -
        var options = options ? options : {}
        var type = options.type ? options.type : "text",
            color = options.color ? options.color : "aquamarine",
            form = options.form ? options.form : "bar",
            required = options.required,
            name = options.name ? options.name : "input",
            radius = options.radius ? options.radius : "default",
            placeholder = options.placeholder ? options.placeholder : "";

    .input.js-input(data-type=type data-name=name)&attributes(attributes)
        .input__outer
            case form
                when "bar"
                    input.input__entry.js-input__entry(required=(required ? required : false) type=type placeholder=placeholder class="" + 
                        (" input__entry_radius_" + radius) +
                        (" input__entry_color_" + color))
                    .input__message.js-input__message(class="" + (" input__message_state_hidden"))
                when "box"
                    textarea.input__entry.js-input__entry(required=(required ? required : false) type=type placeholder=placeholder class="" +
                        (" input__entry_radius_" + radius) +
                        (" input__entry_color_" + color))