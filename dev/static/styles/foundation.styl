@font-face {
  font-family: 'Lato';
  font-weight: 450;
  src: url('../fonts/lato-regular.ttf') format('truetype'), url('../fonts/lato-regular.woff') format('woff'), url('../images/lato-regular.svg') format('svg')
}

@font-face {
  font-family: 'Lato';
  font-weight: bold;
  src: url('../fonts/lato-black.ttf') format('truetype'), url('../fonts/lato-black.woff') format('woff'), url('../images/lato-black.svg') format('svg')
}

@font-face {
  font-family: 'Lato';
  font-weight: 200;
  src: url('../fonts/lato-light.ttf') format('truetype'), url('../fonts/lato-light.woff') format('woff'), url('../images/lato-light.svg') format('svg')
}

html
  color: #4f4f4f
  font-size: 11pt
  font-family: Lato, Arial, sans-serif
  font-weight: 450
  @media screen and (max-width: 710px)
    font-size: 10pt
  @media screen and (max-width: 640px)
    font-size: 9pt
  @media screen and (max-width: 560px)
    font-size: 8pt
  @media screen and (max-width: 500px)
    font-size: 7pt
  @media screen and (max-width: 450px)
    font-size: 6pt

body
  margin: 0 auto
  max-width: 594px
  padding: 3.5rem

button
  border: none; outline: none
  background-color: transparent
  cursor: pointer

p, em, h1, h2, h3, hr, figure, button
  margin: 0
  padding: 0

text
  font-size: initial
  dominant-baseline: middle

textarea
  resize: none