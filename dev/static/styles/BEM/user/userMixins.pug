mixin userMix(options)
	-
		var options 	= options ? options : {};
		var color 		= options.color ? options.color : 'gray',
			image 		= options.image ? options.image : '',
			name 		= options.name ? options.name : 'name',
			profession 	= options.profession ? options.profession : 'profession',
			facebook 	= options.facebook ? options.facebook : '',
			twitter 	= options.twitter ? options.twitter : '',
			dribble 	= options.dribble ? options.dribble : '';
	.user
		.user__outer
			.user__image
				if block
					block
			.user__info(class='' + (' user__info_color_' + color))
				.user__name(class='' + (' user__name_color_' + color))= name
				.user__profession(class='' + (' user__profession_color_' + color))= profession
				.user__socials(class='' + (' user__socials_color_' + color))
					a.user__social.user__social_fb(target="_blank" href=facebook class='' + ('user__social_color_'+color))
					a.user__social.user__social_tw(target="_blank" href=twitter class='' + ('user__social_color_'+color))
					a.user__social.user__social_dr(target="_blank" href=dribble class='' + ('user__social_color_'+color))