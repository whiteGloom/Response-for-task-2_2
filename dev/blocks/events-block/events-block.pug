include ../note/note

mixin events-block(options = {})
    -
        const {data = []} = options;
    .block
        .block__title
            +title({text: "События"})
        for item in data
            .block__el.block__el_margin_normal
                +note({image: item.image, title: item.title, date: item.date, description: item.description, size: "auto"})