.icon
  width: 100%
  height: 100%
  
  &__outer
    position: relative
    width: 100%
    padding-bottom: 100%
    border-radius: 50%
    background-color: #e5e5e5

  &__image
    position: absolute
    padding: 5%
    height: 100%
    width: 100%
    box-sizing: border-box
    border-radius: 50%
    object-fit: cover
    background-clip: content-box