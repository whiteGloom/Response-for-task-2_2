.form-showcase
  &__wrapper
    margin-top: 3.2rem
    display: flex
    justify-content: space-between
    
  &__form
    width: 48.4%
    
  &__buttons-container
    width: 48.5%
    
  &__button
    margin-top: 2.7rem
    
    &:first-child
      margin-top: 0
  
  &__button-content
    margin-left: auto
    margin-right: auto
    
    &_type_toggle
      width: 46%
      display: flex
      justify-content: space-between
      margin-top: 1.8rem
      
    &_type_tick
      width: 22%
      display: flex
      justify-content: space-between
      margin-top: 2rem