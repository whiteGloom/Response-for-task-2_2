.toggle
  width: 4rem
  height: 1.6rem
  
  &__fakeInput
    display: none
    
  &__outer
    display: block
    width: 100%
    height: 100%
    position: relative
    border-radius: 12px
    transition: .3s all
    background-color: #e5e5e5

  &__fakeInput:checked + &__outer
    background-color: #4eb7a8

  &__outer::after
    content: "off"
    position: absolute
    top: .25rem
    font-size: .8rem
    font-family: Lato, Arial, sans-serif
    font-weight: bold
    text-transform: uppercase
    color: white
    transition: .3s all
    left: 1.75rem
    
  &__fakeInput:checked + &__outer::after
    content: "on"
    left: .75rem

  &__handle
    top: .2rem
    position: absolute
    width: 1.2rem
    height: 1.2rem
    background-color: white
    border-radius: 50%
    transition: .2s all
    left: .2rem


  &__fakeInput:checked + &__outer &__handle
    left: 2.6rem
