.searchbar
  width: 100%

.searchbar__outer
  display: flex
  width: 100%
  height: 2rem
  justify-content: space-between

.searchbar__input
  height: 100%
  width: 100%
  flex-shrink: 1

.searchbar__button
  width: 2.2rem
  height: 100%
  border-radius: 0 3px 3px 0
  fill: white
  flex-shrink: 0
  transition: .2s all
  cursor: pointer
  background-color: #e75735
  
.searchbar__button:hover
.searchbar__button:focus
  background-color: #bf3e1f