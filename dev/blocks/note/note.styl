.note
  width: 100%

.note__outer
  display: flex
  width: 100%
  justify-content: space-between
  border-radius: 3px
  overflow: hidden

.note__imageBox
  width: 33%
  flex-shrink: 0

.note__image
  width: 100%
  height: 100%
  object-fit: cover

.note__info
  width: 67%
  min-height: 11.45rem
  padding: 1.5rem

.note__info_type_event
  background-color: #4eb7a8

.note__info_type_news
  background-color: #e75735

.note__title
  display: block
  font-style: normal
  color: white

.note__title_type_event
  margin-top: 1rem
  font-family: Lato
  font-weight: bold
  font-size: .8rem
  text-transform: uppercase

.note__title_type_news
  font-family: Lato
  font-weight: 200
  font-size: 2rem
  line-height: .85

.note__dateBox{}

.note__date
  display: inline-block
  font-style: normal
  color: white

.note__date_type_eventDay
  font-size: 5rem
  font-family: Lato
  font-weight: 200
  line-height: .8

.note__date_type_eventMonth
  font-family: Lato
  font-weight: 200
  font-size: 2rem

.note__date_type_news
  font-family: Lato
  font-weight: bold
  margin-top: .9rem
  font-size: .75rem
  text-transform: uppercase

.note__description
  font-size: .75rem
  font-family: Lato
  font-weight: 450
  color: white

.note__description_type_event
  margin-top: .3rem

.note__description_type_news
  margin-top: .8rem

.note__button
  width: 88%
  margin: 1.2rem auto 0 auto