mixin input(options = {})
    -
        const {
            type = "text",
            color = "aquamarine",
            form = "bar",
            required,
            name = "input",
            radius = "default",
            placeholder = "",
            value = ""
        } = options;

    .input.js-input(data-type=type data-name=name data-custom="true" data-valid="true")
        .input__outer
            case form
                when "bar"
                    input.input__entry.js-input__entry(required=(required ? required : false) value=value type=type placeholder=placeholder class="" + 
                        (" input__entry_radius_" + radius) +
                        (" input__entry_color_" + color) +
                        (" input__entry_form_" + form))
                    .input__message.js-input__message(class="" + (" input__message_state_hidden"))
                when "box"
                when "boxMini"
                    textarea.input__entry.js-input__entry(required=(required ? required : false) value=value type=type placeholder=placeholder class="" +
                        (" input__entry_radius_" + radius) +
                        (" input__entry_color_" + color) +
                        (" input__entry_form_" + form))