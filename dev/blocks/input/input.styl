.input
  width: 100%
  height: 100%

.input__outer
  display: flex
  width: 100%
  height: 100%
  justify-content: space-between

.input__entry
  width: 100%
  height: 100%
  border: none
  padding: .35rem .9rem .5rem .9rem
  box-sizing: border-box
  font-size: .9rem
  flex-shrink: 1
  color: #888888
  transition: .4s all

.input__entry_color_aquamarine
  background-color: #e5e5e5

.input__entry_color_aquamarine:focus
  background-color: #4eb7a8
  color: white

.input__entry_color_orange
  background-color: #e5e5e5

.input__entry_color_orange:focus
  background-color: #e75735
  color: white

.input__entry_radius_default
  border-radius: 3px

.input__entry_radius_left
  border-radius: 3px 0 0 3px

.input__message
  position: relative
  width: 3.1rem
  margin-left: .5rem
  padding: .55rem .9rem .5rem .9rem
  flex-shrink: 0
  border-radius: 4px
  font-size: .7rem
  text-transform: uppercase
  text-align: center
  color: white
  transition: .3s all
  cursor: default

.input__message::before
  position: absolute
  display: block
  content: ''
  left: -6px
  top: 50%
  width: 0
  height: 0
  margin-top: -3px
  overflow: hidden
  border: 3px solid transparent
  border-right-color: inherit

.input__message_state_error
  background-color: #e75735
  border-color: #e75735

.input__message_state_hidden
  display: none
  
.input__message_state_succes
  background-color: #4eb7a8
  border-color: #4eb7a8