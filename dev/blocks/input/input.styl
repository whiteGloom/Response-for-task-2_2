.input
  width: 100%
  height: 100%

  &__outer
    display: flex
    width: 100%
    height: 100%
    justify-content: space-between

  &__entry
    width: 100%
    height: 100%
    font-family: Lato, Arial, sans-serif
    border: none
    padding: .35rem .9rem .5rem .9rem
    box-sizing: border-box
    font-size: .9rem
    flex-shrink: 1
    color: #888888
    transition: .4s all

    &_color
      &_aquamarine
        background-color: #e5e5e5

      &_aquamarine:focus
        background-color: #4eb7a8
        color: white

      &_orange
        background-color: #e5e5e5

      &_orange:focus
        background-color: #e75735
        color: white
        
    &_form
      &_box
        min-height: 6rem

    &_radius
      &_default
        border-radius: 3px

      &_left
        border-radius: 3px 0 0 3px

  &__message
    position: relative
    width: 3.1rem
    margin-left: .5rem
    padding: .55rem .9rem .5rem .9rem
    flex-shrink: 0
    border-radius: 4px
    font-size: .7rem
    text-transform: uppercase
    text-align: center
    color: white
    transition: .3s all
    cursor: default

    &::before
      position: absolute
      display: block
      content: ''
      left: -6px
      top: 50%
      width: 0
      height: 0
      margin-top: -3px
      overflow: hidden
      border: 3px solid transparent
      border-right-color: inherit

    &_state
      &_error
        background-color: #e75735
        border-color: #e75735

      &_hidden
        display: none
        
      &_succes
        background-color: #4eb7a8
        border-color: #4eb7a8