.map
  width: 100%
  height: 100%

.map__outer
  position: relative
  width: 100%
  height: 100%
  border-radius: 3px
  overflow: hidden
  min-height: 18.5rem

.map__holder
  width: 100%
  top: 0
  bottom: 4.7rem
  position: absolute

.map__overlay
  position: absolute
  width: 100%
  box-sizing: border-box
  bottom: 0
  padding: 1rem 1.3rem 1.35rem 2rem
  background-color: #e75735
  color: white

.map__title
  float: left
  display: inline-block
  font-style: normal
  font-family: Lato
  font-weight: 200
  font-size: 2rem

.map__adressBox
  display: inline-block
  margin-left: 1.6rem
  margin-top: 0.3rem
  float: left

.map__adress
  display: block
  font-style: normal
  font-size: .8rem
  text-transform: uppercase

.map__button
  display: inline-block
  width: 2rem
  height: 2rem
  margin-top: 0.3rem
  margin-right: 1rem
  float: right
  transition: .1s all
  background-size: contain
  background-repeat: no-repeat

.map__button:hover
.map__button:focus
  transform: scale(1.1)

.map__button:active
  transform: scale(.9)

.map__button_type_me
  background-image: url('../images/me-icon.png')

.map__button_type_marker
  background-image: url('../images/marker-icon.png')