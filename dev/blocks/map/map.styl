.map
  width: 100%
  height: 100%

  &__outer
    position: relative
    width: 100%
    height: 100%
    border-radius: 3px
    overflow: hidden
    min-height: 18.5rem

  &__holder
    width: 100%
    top: 0
    bottom: 4.7rem
    position: absolute

  &__overlay
    position: absolute
    width: 100%
    box-sizing: border-box
    bottom: 0
    padding: 1rem 1.3rem 1.35rem 2rem
    background-color: #e75735
    color: white

  &__title
    float: left
    display: inline-block
    font-style: normal
    font-family: Lato, Arial, sans-serif
    font-weight: 200
    font-size: 2rem

  &__adressBox
    display: inline-block
    margin-left: 1.6rem
    margin-top: 0.3rem
    float: left

  &__adress
    display: block
    font-style: normal
    font-size: .8rem
    text-transform: uppercase

  &__button
    display: inline-block
    width: 2rem
    height: 2rem
    margin-top: 0.3rem
    margin-right: 1rem
    float: right
    transition: .1s all
    background-size: contain
    background-repeat: no-repeat

    &:hover
    &:focus
      transform: scale(1.1)

    &:active
      transform: scale(.9)

    &_type
      &_me
        background-image: url('../images/me-icon.png')

      &_marker
        background-image: url('../images/marker-icon.png')