include ../button/button
include ../toggle/toggle
include ../tick/tick
include ../dropdown/dropdown
include ../searchbar/searchbar

mixin form(options)
    -
        options = options || {};
        const {name = "form", data = [], submitTheme = "aquamarineAlternate", submit = true} = options;
    form.form.js-form(name=name)
        for item in data
            .form__el
                if item.text
                    .form__elText= item.text
                .form__elEntry.js-form__elEntry(class="" + (" form__elEntry_size_" + (item.text ? "auto" : "fill")))
                    case item.type
                        when "input"
                            +input(item.properties)
                        when "dropdown"
                            +dropdown(item.properties)
                        when "toggle"
                            +toggle(item.properties)
                        when "tick"
                            +tick(item.properties)
                        when "searchbar"
                            +searchbar(item.properties)
        if submit
            .form__submit
                +button({form: "box", theme: submitTheme, content: "submit", type: "submit"})