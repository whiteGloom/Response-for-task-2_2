.form
  width: 100%
  &__el
    display: flex
    width: 100%
    
    &_margin
      &_normal
        margin-top: .8rem

      &_big
        margin-top: 1rem

    &:first-child
      margin-top: 0

  &__el-entry
    &_size
      &_auto
        flex-shrink: 0

      &_fill
        width: 100%

  &__el-text
    width: 100%
    cursor: default
    font-style: normal

  &__submit
    margin-top: .6rem
    margin-left: auto
    display: table