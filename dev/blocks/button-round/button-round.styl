.button-round
  overflow: hidden
  
  &:active
    transition: .2s all
    transform: scale(.95)

  &_blocked
    cursor: default

  &__outer
    display: flex
    position: relative
    transition: .2s all
    border-radius: 100%
    border: 3px solid

    ~/ &&_blocked
    ~/:hover &&_blocked
    ~/:active &&_blocked
    ~/:focus &&_blocked
      border-color: #e5e5e5
      background-color: #e5e5e5

    &_theme
      &_aquamarine
        border-color: #28a290
        background-color: white
        
      ~/:hover &_aquamarine
      ~/:focus &_aquamarine
      ~/:active &_aquamarine
        background-color: #28a290

      &_aquamarine-alternate
        border-color: #28a290
        background-color: #28a290
      
      ~/:hover &_aquamarine-alternate
      ~/:focus &_aquamarine-alternate
      ~/:active &_aquamarine-alternate
        background-color: #28a290

  &__rippleEffect
    background-color: white
    border-radius: 50%
    pointer-events: none
    position: absolute
    transform: scale(0)
    
    &_start 
      transform: scale(0.2)

    &_active 
      transform: scale(2)
      transition: transform 700ms, opacity 700ms
      opacity: 0

  &__content
    display: block
    transition: .2s all
    width: 3rem
    height: 3rem

    ~/ &&_blocked
    ~/:hover &&_blocked
    ~/:active &&_blocked
    ~/:focus &&_blocked
      color: white
      fill: white

    &_theme
      &_aquamarine
        color: #4eb7a8
        fill: #4eb7a8
        
      ~/:hover &_aquamarine
      ~/:focus &_aquamarine
      ~/:active &_aquamarine
        color: white
        fill: white

      &_aquamarine-alternate
        color: white
        fill: white
        
      ~/:hover &_aquamarine-alternate
      ~/:focus &_aquamarine-alternate
      ~/:active &_aquamarine-alternate
        color: white
        fill: white