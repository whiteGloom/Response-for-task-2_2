.button-round
  &:active
    transition: .2s all
    transform: scale(.95)

  &_blocked
    cursor: default

  &__outer
    display: flex
    position: relative
    width: 100%
    transition: .2s all
    border-radius: 100%
    height: 100%

    ~/ &&_blocked
    ~/:hover &&_blocked
    ~/:active &&_blocked
    ~/:focus &&_blocked
      background-color: #e5e5e5

    &_theme
      &_aquamarine
        background-color: #4eb7a8
        
      ~/:hover &_aquamarine
      ~/:focus &_aquamarine
      ~/:active &_aquamarine
        background-color: #28a290

      &_orange
        background-color: #e75735
      
      ~/:hover &_orange
      ~/:focus &_orange
      ~/:active &_orange
        background-color: #bf3e1f

  &__inner
    transition: .2s all
    border-radius: 50%
    border-width: 3px
    border-style: solid

    ~/ &&_blocked
    ~/:hover &&_blocked
    ~/:focus &&_blocked
    ~/:active &&_blocked
      background-color: #e5e5e5
      border-color: #e5e5e5

    &_theme
      &_aquamarine
        background-color: white
        border-color: #4eb7a8
        
      ~/:hover &_aquamarine
      ~/:focus &_aquamarine
      ~/:active &_aquamarine
        background-color: #4eb7a8

      &_orange
        background-color: white
        border-color: #e75735
        
      ~/:hover &_orange
      ~/:focus &_orange
      ~/:active &_orange
        background-color: #e75735

  &__rippleEffect
    position: absolute
    height: 100%
    width: 100%
    background-position: center
    opacity: 0
    transition: .5s all
    z-index: 1
    
    ~/:hover &_active
      background: radial-gradient(circle, white 1%, transparent 1%) center/15000%
      
    ~/:active &_active
      background-size: 100%
      transition: 0s all
      opacity: .4

  &__content
    display: block
    transition: .2s all
    width: 3rem
    height: 3rem

    ~/ &&_blocked
    ~/:hover &&_blocked
    ~/:active &&_blocked
    ~/:focus &&_blocked
      color: white
      fill: white

    &_theme
      &_aquamarine
        color: #4eb7a8
        fill: #4eb7a8
        
      ~/:hover &_aquamarine
      ~/:focus &_aquamarine
      ~/:active &_aquamarine
        color: white
        fill: white

      &_orange
        color: #e34a26
        fill: #e34a26
        
      ~/:hover &_orange
      ~/:focus &_orange
      ~/:active &_orange
        color: white
        fill: white