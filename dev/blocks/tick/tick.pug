mixin tick(options = {})
    -
        const {checked = false, name = "tick", id = ""} = options;

    .tick.js-tick(type="button")
        input.tick__fakeInput(name=name id=id type="radio" checked=checked)
        label.tick__outer(name=name for=id)
            svg.tick__icon(viewbox="0 0 40 40")
                g(transform="translate(16, 28) rotate(-135)")
                    rect(width="10" height="3")
                    rect(width="3" height="16" y="3")