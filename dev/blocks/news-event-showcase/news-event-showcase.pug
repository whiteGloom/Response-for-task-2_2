include ../title/title
include ../note/note

mixin news-event-showcase(options = {})
    -
        const {newsData = {}, eventData = {}} = options;
    .news-event-showcase
        .news-event-showcase__title
            +title({text: "News & events", level: 3})
        .news-event-showcase__el
            +note(newsData)
            +note(eventData)