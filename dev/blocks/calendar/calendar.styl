.calendar
  min-width: 13rem
  overflow: hidden
  border-radius: 3px
  &_size
    &_normal
      width: 19rem

    &_min
      width: 3rem
      
    &_auto
      width: 100%

  &__header
    width: 100%
    height: 7.4rem
    background-color: #e75735
    overflow: hidden

  &__today
    margin-top: .6rem
    font-size: 5.3rem
    text-align: center
    font-family: Lato, Arial, sans-serif
    font-weight: 200
    color: white