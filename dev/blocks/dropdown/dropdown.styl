.dropdown
  width: 100%

  &__outer
    position: relative
    display: flex
    width: 100%
    height: 2rem
    justify-content: space-between

  &__currentValue
    position: relative
    width: 100%
    height: 100%
    min-width: 6rem
    border-radius: 3px 0 0 3px
    padding: .35rem .9rem .5rem .9rem
    box-sizing: border-box
    flex-shrink: 1
    background-color: #e5e5e5
    color: #888888
    transition: .4s all
    cursor: default

    &:focus
      background-color: #e75735
      color: white

  &__button
    width: 2.2rem
    height: 100%
    border-radius: 0 3px 3px 0
    fill: white
    flex-shrink: 0
    transition: .2s all
    cursor: pointer
    background-color: #4eb7a8

    &:hover
    &:focus
      background-color: #28a290

  &__optionsBox
    position: absolute
    width: 100%
    top: 100%
    left: 0
    margin-top: -3px
    box-sizing: border-box
    background-color: #4eb7a8
    border-radius: 3px
    border-top-right-radius: 0
    border: 1px solid #4eb7a8
    cursor: default
    transition: .3s all
    z-index: 999

    &_state
      &_hidden
        display: none

      &_visible
        display: block

  &__option
    position: relative
    padding: .35rem .9rem .5rem .9rem
    cursor: pointer;
    color: white
    transition: .3s all

    &:hover
    &:focus
      color: white
      background-color: #509d92