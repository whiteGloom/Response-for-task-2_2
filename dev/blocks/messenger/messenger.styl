.messenger
  min-width: 12.5rem
  
  &_size
    &_min
      width: 12.5rem

    &_auto
      width: 100%

    &_normal
      width: 19.6rem

  &__header
    position: relative
    width: 100%
    height: 5.6rem
    border-radius: 3px 3px 0 0
    background-color: #4eb7a8
    border-bottom: 2.35rem solid #46ab9d

  &__title
    display: block
    padding-top: 1.25rem
    text-align: center
    font-size: 2.1rem
    font-family: Lato, Arial, sans-serif
    font-weight: 200
    font-style: normal
    color: white

  &__image
    position: absolute
    top: 4.75rem
    width: 6.5rem
    left: 50%
    margin-left: -3.25rem

  &__body
    width: 100%
    padding: 1.6rem
    padding-bottom: 1.7rem
    border-radius: 0 0 3px 3px
    box-sizing: border-box
    background-color: #f2f2f2
    overflow: hidden

  &__modeBox
    width: 96%
    margin: 0 auto
    display: flex
    justify-content: space-between

  &__mode
    width: 1.5rem
    height: 1.5rem
    background-position: center
    background-repeat: no-repeat
    background-size: contain
    transition: .1s all

    &:hover
    &:focus
      transform: scale(1.1)

    &:active
      transform: scale(.9)

    &_type
      &_text
        background-image: url('../images/chat-icon.png')

      &_photo
        background-image: url('../images/camera-icon.png')

  &__chat
    width: 100%
    min-height: 5.85rem
    max-height: 10rem
    margin-top: .85rem
    overflow: auto
    border-radius: 2px

  &__message
    position: relative
    margin-top: .75rem
    padding: 1.1rem 1.3rem 1.7rem
    border-radius: 3px
    font-size: .8rem
    border-color: white

    &:first-child
      margin-top: 4px

    &_sender
      &_interlocutor
        background-color: white
        color: #868686

        &::before
          content: ''
          display: block
          position: absolute
          border: 6px solid transparent
          border-bottom-color: inherit
          left: 50%
          margin-left: -3px
          top: -12px

      &_user
        background-color: #4eb7a8
        color: white

  &__entry
    width: 100%
    height: 6rem
    margin-top: .3rem
    overflow: hidden
    background-color: white
    border-radius: 3px
    padding: .2rem
    box-sizing: border-box

  &__send
    width: 100%
    margin-top: 1rem