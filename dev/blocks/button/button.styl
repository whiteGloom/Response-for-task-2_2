.button_blocked
  cursor: default

.button_form_boxEvent
  width: 100%

// Outer
.button__outer
  display: flex
  position: relative
  width: 100%
  transition: .2s all

.button__outer_blocked
  background-color: #e5e5e5

.button__outer_blocked
.button__outer_blocked
.button__outer_blocked
  background-color: #e5e5e5

.button__outer_form_box
  border-radius: 2px
  margin-top: 3px

.button__outer_form_boxMini
.button__outer_form_boxEvent
  border-radius: 2px
  margin-top: 2px

.button__outer_form_round
  border-radius: 100%
  height: 100%

.button:active .button__outer_form_round
  transform: scale(.95)

.button__outer_theme_aquamarine
  background-color: #4eb7a8

.button:hover .button__outer_theme_aquamarine
.button:focus .button__outer_theme_aquamarine
.button:active .button__outer_theme_aquamarine
  background-color: #28a290

.button__outer_theme_aquamarineAlternate
  background-color: #28a290

.button:hover .button__outer_theme_aquamarineAlternate
.button:focus .button__outer_theme_aquamarineAlternate
.button:active .button__outer_theme_aquamarineAlternate
  background-color: #2b7a6e

.button__outer_theme_orange
  background-color: #e75735

.button:hover .button__outer_theme_orange
.button:focus .button__outer_theme_orange
.button:active .button__outer_theme_orange
  background-color: #bf3e1f

// Inner

.button__inner
  transition: .2s all

.button__inner_blocked
  background-color: #e5e5e5
  border-color: #e5e5e5

.button__inner_form_box
  width: 100%
  min-width: 7.8rem
  transform: translateY(-3px)
  border-width: 1px
  border-style: solid
  border-radius: 3px
  z-index: 0

.button:active .button__inner_form_box
  transform: translateY(0)

.button__inner_form_boxEvent
  width: 100%
  min-width: 7.8rem
  transform: translateY(-2px)
  border-width: 1px
  border-style: solid
  border-radius: 3px
  z-index: 0

.button:active .button__inner_form_boxEvent
  transform: translateY(0)

.button__inner_form_boxMini
  width: 100%
  min-width: 5.2rem
  transform: translateY(-2px)
  border-width: 1px
  border-style: solid
  border-radius: 3px
  z-index: 0

.button:active .button__inner_form_boxMini
  transform: translateY(0)

.button__inner_form_round
  border-radius: 50%
  border-width: 3px
  border-style: solid

.button__inner_theme_aquamarine
  background-color: white
  border-color: #4eb7a8

.button:hover .button__inner_theme_aquamarine
.button:focus .button__inner_theme_aquamarine
.button:active .button__inner_theme_aquamarine
  background-color: #4eb7a8

.button__inner_theme_aquamarineAlternate
  background-color: white
  border-color: #28a290

.button:hover .button__inner_theme_aquamarineAlternate
.button:focus .button__inner_theme_aquamarineAlternate
.button:active .button__inner_theme_aquamarineAlternate
  background-color: #249181
  border-color: #249181

.button__inner_theme_orange
  background-color: white
  border-color: #e75735

.button:hover .button__inner_theme_orange
.button:focus .button__inner_theme_orange
.button:active .button__inner_theme_orange
  background-color: #e75735

// Ripple

.button__rippleEffect
  position: absolute
  height: 100%
  width: 100%
  background-position: center
  opacity: 0
  transition: .5s all
  z-index: 1

.button:hover .button__rippleEffect
  background: radial-gradient(circle, white 1%, transparent 1%) center/15000%

.button:active .button__rippleEffect
  background-size: 100%
  transition: 0s all
  opacity: .4

// Content
.button__content
  display: block
  transition: .2s all

.button__content_blocked
  color: white
  fill: white

.button__content_form_box
  font-family: Lato
  font-weight: bold
  text-transform: uppercase
  font-size: .8rem
  padding: .55rem 2.3rem

.button__content_form_boxEvent
  font-family: Lato
  font-weight: bold
  text-transform: uppercase
  font-size: .7rem
  padding: .3rem 1.1rem

.button__content_form_boxMini
  font-family: Lato
  font-weight: bold
  text-transform: uppercase
  font-size: .7rem
  padding: .2rem 1.1rem

.button__content_form_round
  width: 3rem
  height: 3rem

.button__content_theme_aquamarine
  color: #4eb7a8
  fill: #4eb7a8

.button:hover .button__content_theme_aquamarine
.button:focus .button__content_theme_aquamarine
.button:active .button__content_theme_aquamarine
  color: white
  fill: white

.button__content_theme_aquamarineAlternate
  color: #4eb7a8
  fill: #4eb7a8

.button:hover .button__content_theme_aquamarineAlternate
.button:focus .button__content_theme_aquamarineAlternate
.button:active .button__content_theme_aquamarineAlternate
  color: white
  fill: white

.button__content_theme_orange
  color: #e34a26
  fill: #e34a26

.button:hover .button__content_theme_orange
.button:focus .button__content_theme_orange
.button:active .button__content_theme_orange
  color: white
  fill: white